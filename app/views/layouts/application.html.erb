<!DOCTYPE html>
<html>
  <head>
    <title>NotaBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><i class="fa fa-exclamation" aria-hidden="true"></i><i class="fa fa-rss" aria-hidden="true"></i> NotaBlog</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/users/new">Sign Up</a></li>
        <% if signed_in? %>
          <li><%=link_to "Create Post", "/posts/new", method: :get %></li>
          <!-- <li><%=link_to "Sign Out", "/sessions/:id", method: :delete%></li> -->
        <% else %>
          <li><a href="/sessions/new">Sign In</a></li>
        <% end %>
      </ul>
      <% if signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= "#{current_user.first_name} #{current_user.last_name}" %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/users/<%=current_user.id%>">Profile</a></li>
            <li><a href="#">Another action</a></li>
            <li role="separator" class="divider"></li>
            <li><%=link_to "Sign Out", "/sessions/:id", method: :delete%></li>
          </ul>
        </li>
      </ul>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

  <div class="container">  <%= yield %> </div>

  </body>
</html>
